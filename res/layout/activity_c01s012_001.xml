                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/baseColor"
                        android:textSize="@dimen/text_content_size"
                        android:gravity="left"
                        android:text="操作时间"/>

